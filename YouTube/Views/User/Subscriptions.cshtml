@model List<UserDto>

<h1>Subscribed Users List</h1>

<table class="table admin-user-table">
    <thead>
        <tr class="table-dark">
            <th scope="col">Nickname</th>
            <th scope="col">Avatar</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Nickname</td>
                <td>
                    @if (!string.IsNullOrEmpty(user.AvatarUrl))
                    {
                        <img src="@user.AvatarUrl" alt="Avatar" height="70" />
                    }
                    else
                    {
                        <span>None</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

<p>Count: @Model.Count</p>
